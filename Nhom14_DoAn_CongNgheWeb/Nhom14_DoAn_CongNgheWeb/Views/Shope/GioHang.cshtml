
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Share/TrangChuLayout.cshtml";
}

@using Nhom14_DoAn_CongNgheWeb.Models
@using Nhom14_DoAn_CongNgheWeb.Connection;
@model List<Cart>
<div class="card border-dark">
    <table class="table">
        <tr style="background-color:lightyellow">
            <th>Mã Sản Phẩm</th>
            <th>Tên Sản Phẩm</th>
            <th>Ảnh Bìa</th>
            <th>Số Lượng</th>
            <th>Đơn Giá</th>
            <th>Thành Tiền</th>
            <th></th>
            <th>@Html.ActionLink("DELETE ALL", "XoaGioHang_All")</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td width="12%">@item.masanpham</td>
                <td width="26%">@item.tensanpham</td>

                <td width="22%"><img src="~/Images/DIEN THOAI/IPHONE/@item.hinh" width="100%" /></td>
                @using (Html.BeginForm("CapNhatGioHang", "Shope", new { @MaSP = item.masanpham }))
                {
                    <td width="12%"><input type="number" min="1" name="txtSoluong" value="@item.soluong" size="2" /></td>
                    <td width="12%">@String.Format("{0:0,0}", item.gia)</td>
                    <td width="12%">@String.Format("{0:0,0}", item.dThanhTien)</td>
                    <td width="16%"><a href="@Url.Action("IndexProduct","Product",new { @ms=item.masanpham}) ">Detail</a></td>
                    <td><input type="submit" value="Update" class="btn btn-primary" /></td>

                }
            </tr>

        }
        <tr style="background-color:lightyellow">
            <td colspan="3" style="color:blue;font-weight:bold;text-align:right">tong cong</td>
            <td style="color:blue;font-weight:bold;">so luong:@ViewBag.TongSoLuong</td>
            <td></td>
            <td colspan="4" style="color:blue;font-weight:bold;text-align:left">TT: @String.Format("{0:0,0}", ViewBag.TongThanhTien)</td>

        </tr>
        @*<td colspan="6" style="text-align:right;color:blue">
            @using (Html.BeginForm("DatHang", "Shope", new { @class = "" }))
            {
                <input type="submit" value="Đặt hàng" class="btn-danger" />
            }
        </td>*@
        <a href="@Url.Action("Payment","ThanhToanHoaDon")" class="btn btn-primary float-md-right">Thanh Toán Hóa Đơn <i class="fa fa-chevron-right"></i> </a>
    </table>
</div>



